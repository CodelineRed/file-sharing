{% set dataTableOrder = '[[ 3, "desc" ]]' %}
{% set dataTableColumns = '[null, { "orderSequence": [ "desc", "asc" ] }, null, { "orderSequence": [ "desc", "asc" ] }]' %}

{# if is superadmin or user is current user #}
{% if has_role({0: 'superadmin'}) or user.id is same as(current_user()) %}
    {% set dataTableOrder = '[[ 4, "desc" ]]' %}
    {% set dataTableColumns = '[{ "orderSequence": [ "desc", "asc" ] }, null, { "orderSequence": [ "desc", "asc" ] }, null, { "orderSequence": [ "desc", "asc" ] }, null]' %}
    {% set publicFiles = files %}
{% endif %}

{# if files available #}
{% if publicFiles|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-dark data-table" data-order='{{ dataTableOrder }}' data-columns='{{ dataTableColumns }}'>
            <thead>
                <tr>
                {% if has_role({0: 'superadmin'}) or user.id is same as(current_user()) %}
                    <th scope="col"><span class="text-nowrap">{{ 'file-access'|trans }}</span></th>
                {% endif %}
                    <th scope="col"><span class="text-nowrap">{{ 'file-name'|trans }}</span></th>
                    <th scope="col"><span class="text-nowrap">{{ 'file-size'|trans }}</span></th>
                    <th scope="col"><span class="text-nowrap">{{ 'mime-type'|trans }}</span></th>
                    <th scope="col"><span class="text-nowrap">{{ 'created-at'|trans }}</span></th>
                {% if has_role({0: 'superadmin'}) or user.id is same as(current_user()) %}
                    <th scope="col" data-orderable="false" class="text-center"><span class="text-nowrap">{{ 'remove'|trans }}</span></th>
                {% endif %}
                </tr>
            </thead>
            <tbody>
            {# loop through database records #}
            {% for file in publicFiles %}
                <tr id="file-{{ file.id }}">
                {% if has_role({0: 'superadmin'}) or user.id is same as(current_user()) %}
                    <td data-order="{{ file.accessId }}" class="td-access">
                        <a href="{{ path_for('file-access-' ~ lc, { 'uuid': file.id }) ~ returnUrl }}" class="btn btn-{{ file.access.button }} btn-sm btn-access mr-2" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ (file.access.name ~ '-file')|trans }}"><i class="fas fa-{{ file.access.icon }} fa-fw"></i></a>
                        <span class="d-inline-block" data-toggle="tooltip" data-placement="top" title="{{ 'update-file'|trans }}"><a href="#" data-file-id="{{ file.id }}" data-get-file="{{ path_for('api-get-file-' ~ glc, { 'uuid': file.id }) }}" data-update-file="{{ path_for('api-update-file-' ~ glc, { 'uuid': file.id }) }}" data-toggle="modal" data-target="#update-file" class="btn btn-success btn-sm btn-update-file" tabindex="-1" role="button" aria-disabled="true"><i class="fas fa-pen fa-fw"></i></a></span>
                    </td>
                {% endif %}
                    <td><a href="{{ path_for('file-show-' ~ lc, { 'uuid': file.id }) }}" class="current text-nowrap detail-link" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'show-file'|trans }}">{{ file.name }}</a></td>
                    <td data-order="{{ file.size }}"><span class="text-nowrap">{{ file.size|file_size(2, 'dp'|trans, 'ts'|trans) }}</span></td>
                    <td>{{ file.mimeType }}</td>
                    <td data-order="{{ file.createdAt|date('c') }}"><span class="text-nowrap">{{ file.createdAt|date('datetime'|trans, 'timezone'|trans) }}</span></td>
                {% if has_role({0: 'superadmin'}) or user.id is same as(current_user()) %}
                    <td data-order="0" class="text-center"><a href="{{ path_for('file-remove-' ~ lc, { 'uuid': file.id }) ~ returnUrl }}" class="btn btn-danger btn-sm" tabindex="-1" role="button" aria-disabled="true" data-remove='{{ 'file'|trans }}: "{{ file.name }}"' data-toggle="tooltip" data-placement="top" title="{{ 'remove'|trans }}"><i class="fas fa-trash fa-fw"></i></a></td>
                {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <h4>{{ 'no-files'|trans }}</h4>
{% endif %}
