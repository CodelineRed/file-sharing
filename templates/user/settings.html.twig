{% extends "layouts/layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4 text-center">{{ 'user-settings-label'|trans }}</h1>
            <form action="{{ path_for('user-update-' ~ lc, { 'name': name }) }}" method="post">
                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                <input type="hidden" name="process" value="password-change">
                <div class="form-row align-items-center justify-content-center">
                    <div class="col-12 col-md-6">
                        <h3 class="mb-2">{{ 'password-change'|trans }}</h3>
                        <div class="row">
                            <div class="col-12">
                                <label for="user_pass">{{ 'password'|trans }}</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key fa-fw"></i></div>
                                    </div>
                                    <input type="password" class="form-control" name="user_pass" id="user_pass" />
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="user_pass_new">{{ 'password-new'|trans }}</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key fa-fw"></i></div>
                                    </div>
                                    <input type="password" class="form-control" name="user_pass_new" id="user_pass" />
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <label for="user_pass_repeat">{{ 'password-repeat'|trans }}</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key fa-fw"></i></div>
                                    </div>
                                    <input type="password" class="form-control" name="user_pass_repeat" id="user_pass_repeat" />
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary mb-2 btn-block">{{ 'password-change'|trans }} <i class="fas fa-spin fa-sync-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row justify-content-center">
                <div class="col-12 col-md-6">
                    <hr/>
                </div>
            </div>

            <form action="{{ path_for('user-update-' ~ lc, { 'name': name }) }}" method="post">
                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                <input type="hidden" name="process" value="2fa-reset">
                <div class="form-row align-items-center justify-content-center">
                    <div class="col-12 col-md-6">
                        <h3 class="mb-2">{{ '2fa-reset'|trans }}</h3>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="user_pass">{{ 'password'|trans }}</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key fa-fw"></i></div>
                                    </div>
                                    <input type="password" class="form-control" name="user_pass" id="user_pass" />
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary mb-2 btn-block">{{ '2fa-reset'|trans }} <i class="fas fa-spin fa-sync-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}