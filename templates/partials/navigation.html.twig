<div class="row my-3 navigation">
    <div class="col-6 col-md-5 col-lg-6">
        <a class="mr-2 {% if is_current_path('page-index-' ~ glc) %}current{% endif %}" href="{{ path_for('page-index-' ~ glc) }}"><i class="fas fa-home"></i></a>
    {% if has_role('guest') %}
        <a class="mr-2 {% if is_current_path('user-register-' ~ lc) %}current{% endif %}" href="{{ path_for('user-register-' ~ lc) }}"><i class="fas fa-sign-in-alt"></i></a>
    {% endif %}
        
    {# if user is logged in #}
    {% if currentUser %}
        <a href="{{ path_for('user-show-' ~ lc, { 'name': currentUser.name }) }}" class="current">{{ currentUser.name }}</a>
    {% endif %}
    </div>
    <div class="col-12 col-md-7 col-lg-6 text-md-right d-none d-md-block">
        {% include('partials/langswitch.html.twig') %}
    {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) %}
        <span class="pl-3"></span>
        {% if has_role({0: 'superadmin'}) %}
            <a class="{% if is_current_path('file-extension-show-' ~ lc) %}current{% endif %}" href="{{ path_for('file-extension-show-' ~ lc) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'file-extension-show-label'|trans }}"><i class="fas fa-file"></i></a> &#124;
            <a class="{% if is_current_path('file-extension-create-' ~ lc) %}current{% endif %}" href="{{ path_for('file-extension-create-' ~ lc) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'file-extension-create-label'|trans }}"><i class="fas fa-file-medical"></i></a> &#124;
            <a class="{% if is_current_path('user-show-all-' ~ lc) %}current{% endif %}" href="{{ path_for('user-show-all-' ~ lc) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'user-show-all-label'|trans }}"><i class="fas fa-users"></i></a> &#124;
            <a class="{% if is_current_path('user-register-' ~ lc) %}current{% endif %}" href="{{ path_for('user-register-' ~ lc) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'user-create-label'|trans }}"><i class="fas fa-user-plus"></i></a> &#124;
        {% endif %}
        <a class="{% if is_current_path('user-show-' ~ lc, { 'name': name }) or is_current_path('user-show-' ~ lc, { 'name': currentUser.name }) %}current{% endif %}" href="{{ path_for('user-show-' ~ lc, { 'name': currentUser.name }) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'user-show-label'|trans }}"><i class="fas fa-user"></i></a> &#124;
        <a href="{{ path_for('user-logout-' ~ glc) }}" data-toggle="tooltip" data-placement="bottom" title="{{ 'user-logout-label'|trans }}"><i class="fas fa-sign-out-alt"></i></a>
    {% endif %}
    </div>
    <div class="col-6 text-right d-md-none">
        {% include('partials/langswitch.html.twig') %}
        <div class="btn-group float-right ml-3">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bars"></i>
            </button>
            <div class="dropdown-menu">
            {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) %}
                {% if has_role({0: 'superadmin'}) %}
                    <a class="dropdown-item {% if is_current_path('file-extension-show-' ~ lc) %}current{% endif %}" href="{{ path_for('file-extension-show-' ~ lc) }}">{{ 'file-extension'|trans }} <i class="fas fa-file"></i></a>
                    <a class="dropdown-item {% if is_current_path('file-extension-create-' ~ lc) %}current{% endif %}" href="{{ path_for('file-extension-create-' ~ lc) }}">{{ 'create'|trans }} <i class="fas fa-file-medical"></i></a>
                    <a class="dropdown-item {% if is_current_path('user-show-all-' ~ lc) %}current{% endif %}" href="{{ path_for('user-show-all-' ~ lc) }}">{{ 'user-show-all-label'|trans }} <i class="fas fa-users"></i></a>
                    <a class="dropdown-item {% if is_current_path('user-register-' ~ lc) %}current{% endif %}" href="{{ path_for('user-register-' ~ lc) }}">{{ 'create'|trans }} <i class="fas fa-user-plus"></i></a>
                {% endif %}
                <a class="dropdown-item {% if is_current_path('user-show-' ~ lc, { 'name': name }) or is_current_path('user-show-' ~ lc, { 'name': currentUser.name }) %}current{% endif %}" href="{{ path_for('user-show-' ~ lc, { 'name': currentUser.name }) }}">{{ 'user-show-label'|trans }} <i class="fas fa-user"></i></a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="{{ path_for('user-logout-' ~ glc) }}">{{ 'user-logout-label'|trans }} <i class="fas fa-sign-out-alt"></i></a>
            {% endif %}
            </div>
        </div>
    </div>
</div>