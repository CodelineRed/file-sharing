{% extends "layouts/layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12 pt-4">
            <h1 class="mb-3 text-center">{{ 'user-show-all-label'|trans }}</h1>
            <div class="table-responsive">
                <table class="table table-striped table-dark" data-order="[[ 2, &quot;desc&quot; ]]">
                    <thead>
                        <tr>
                            <th scope="col"><span class="nowrap">{{ 'user-name'|trans }}</span></th>
                            <th scope="col"><span class="nowrap">{{ 'files'|trans }}</span></th>
                            <th scope="col"><span class="nowrap">{{ 'created-at'|trans }}</span></th>
                        </tr>
                    </thead>
                    <tbody>
                {% if users|length > 0 %}
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path_for('user-show-' ~ lc, { 'name': user.name }) }}" class="current nowrap">{{ user.name }}</a></td>
                            <td>{{ user.uniqueFiles|length }}</td>
                            <td data-order="{{ user.createdAt|date('c') }}"><span class="nowrap">{{ user.createdAt|date('datetime'|trans, 'timezone'|trans) }}</span></td>
                        </tr>
                    {% endfor %}
                {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}