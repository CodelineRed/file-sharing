<div class="row my-3 navigation">
    <div class="col-6">
        <a class="{% if is_current_path('page-index' ~ lk) %}current{% endif %}" href="{{ path_for('page-index' ~ lk) }}"><i class="fas fa-home"></i></a>
    </div>
    <div class="col-6 text-right">
        {% include('partials/langswitch.html.twig') %}
        {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) %}
            <a class="{% if is_current_path('user-show' ~ lk, { 'name': name }) or is_current_path('user-show' ~ lk) %}current{% endif %} pl-3" href="{{ path_for('user-show' ~ lk) }}"><i class="fas fa-user"></i></a> &#124;
            <a class="{% if is_current_path('user-logout' ~ lk) %}current{% endif %}" href="{{ path_for('user-logout' ~ lk) }}"><i class="fas fa-sign-out-alt"></i></a>
        {% endif %}
    </div>
</div>