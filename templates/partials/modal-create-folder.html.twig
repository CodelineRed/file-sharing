<div class="modal fade" id="create-folder" tabindex="-1" role="dialog" aria-labelledby="create-folder-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-folder-title">{{ 'create-folder'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="create-folder-name" class="col-form-label">{{ 'folder-name'|trans }}:</label>
                        <input type="text" class="form-control" id="create-folder-name" autocomplete="off" />
                    </div>
                    <div class="form-group mb-0">
                        <div class="mb-2">{{ 'access'|trans }}: </div>
                        <div class="btn-group-toggle btn-group-radio btn-group-access" data-toggle="buttons"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'close'|trans }}</button>
                <button type="button" class="btn btn-primary submit-form">{{ 'save'|trans }} <i class="fas fa-spin fa-sync-alt"></i></button>
            </div>
        </div>
    </div>
</div>
