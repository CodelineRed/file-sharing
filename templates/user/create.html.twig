{% extends "layouts/layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-3">{{ 'user-create-label'|trans }}</h1>
            <form action="{{ path_for('user-save-' ~ lc) }}" method="post">
                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                <div class="form-row align-items-center justify-content-center">
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <div class="col-12 mb-2">
                                <label class="sr-only" for="user_name">{{ 'user'|trans }}</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-user fa-fw"></i></div>
                                    </div>
                                    <input type="text" class="form-control" name="user_name" id="user_name" placeholder="{{ 'user'|trans }}" autofocus="autofocus" />
                                </div>
                            </div>
                            <div class="col-12 mb-2">
                                <label class="sr-only" for="user_pass">{{ 'password'|trans }}</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fas fa-key fa-fw"></i></div>
                                    </div>
                                    <input type="password" class="form-control" name="user_pass" id="user_pass" />
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                {% if roles|length > 0 %}
                                <select class="custom-select" name="user_role">
                                    {% for role in roles %}
                                        {% if loop.index > 1 %}
                                        <option value="{{ role.name }}">{{ role.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                                {% endif %}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary mb-2 btn-block">{{ 'submit'|trans }} <i class="fas fa-spin fa-sync-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}