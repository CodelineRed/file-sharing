{% extends "layouts/layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12 pt-4">
            <h1 class="mb-3 text-center">{{ 'user-show-all-label'|trans }}</h1>
            <div class="table-responsive">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'user-name'|trans }}</th>
                            <th scope="col">{{ 'files'|trans }}</th>
                            <th scope="col">{{ 'created-at'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                {% if users|length > 0 %}
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path_for('user-show-' ~ lc, { 'name': user.name }) }}" class="current">{{ user.name }}</a></td>
                            <td>{{ user.uniqueFiles|length }}</td>
                            <td>{{ user.createdAt|date('datetime'|trans, 'timezone'|trans) }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}