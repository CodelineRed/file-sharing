{% extends "layouts/layout.html.twig" %}

{% block content %}
    {% if user %}
        <br/>
        {{ 'id'|trans }}: {{ user.id }}<br/>
        {{ 'name'|trans }}: {{ user.name }}<br/>
        {{ 'role'|trans }}: {{ user.role.name|trans }}<br/>
        {{ 'created-at'|trans }} {{ user.createdAt|date('datetime'|trans) }}<br/>
        {{ 'updated-at'|trans }} {{ user.updatedAt|date('datetime'|trans) }}<br/>
        
        {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) and user.id == current_user() %}
            {% if user.hasTwoFactor %}
                {{ '2fa-enabled'|trans }}
            {% else %}
                <a href="{{ path_for('user-enable-two-factor' ~ lk) }}">{{ trans('user-two-factor' ~ ns) }}</a>
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}