<div class="modal fade" id="edit-file" tabindex="-1" role="dialog" aria-labelledby="edit-file-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-file-title">{{ 'edit-file'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="edit-file-name" class="col-form-label">{{ 'file-name'|trans }}:</label>
                        <input type="text" class="form-control" id="edit-file-name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'close'|trans }}</button>
                <button type="button" class="btn btn-primary submit-form" disabled>{{ 'save'|trans }} <i class="fas fa-spin fa-sync-alt"></i></button>
            </div>
        </div>
    </div>
</div>
