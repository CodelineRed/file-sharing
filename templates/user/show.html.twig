{% extends "layouts/layout.html.twig" %}

{% block content %}
    {% if user %}
    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <h1 class="mb-3">{{ user.name }}</h1>
            {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) and user.id == current_user() %}
                {% if user.hasTwoFactor %}
                    <button type="button" class="btn btn-success"><i class="fas fa-lock mr-2"></i> {{ '2fa-enabled'|trans }}</button>
                {% else %}
                    <a href="{{ path_for('user-enable-two-factor-' ~ lc) }}" class="btn btn-warning" tabindex="-1" role="button" aria-disabled="true"><i class="fas fa-unlock mr-2"></i> {{ trans('user-two-factor-label' ~ ns) }}</a>
                {% endif %}
            {% endif %}
            
            {% if has_role({0: 'superadmin'}) and roles|length > 0 %}
            <div class="mt-5">
                {% for role in roles %}
                    {% set buttonStyle = 'warning' %}
                    {% if user.role.id is same as(role.id) %}
                        {% set buttonStyle = 'success' %}
                    {% endif %}
                    {% if loop.index > 1 %}
                    <a href="{{ path_for('user-update-role-' ~ lc, { 'name': user.name, 'role': role.name }) }}" class="btn btn-{{ buttonStyle }} mb-2" tabindex="-1" role="button" aria-disabled="true">{{ role.name }}</a>
                    {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
        {# if is logged in user #}
        {% if has_role({0: 'member', 1: 'admin', 2: 'superadmin'}) and user.id == current_user() %}
        <div class="col-12 col-md-6 mb-5">
            <h2 class="mb-3">{{ 'upload-file'|trans }}</h2>
            <form action="{{ path_for('file-upload-' ~ lc) }}" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="col-12">
                        <div class="custom-file mb-2">
                            <input type="file" name="upload" class="custom-file-input" id="file-upload">
                            <label class="custom-file-label" for="file-upload">{{ trans('choose-file', {1: maxFileSize}) }}</label>
                        </div>
                        <div class="switch">
                            <input type="hidden" name="file_included" value="0">
                            <input type="checkbox" name="file_included" id="file_included" value="1" checked>
                            <label class="btn btn-block" for="file_included">
                                <i class="fas fa-check"></i>
                                <i class="fas fa-times"></i>
                                {{ 'note-included'|trans }}
                            </label>
                        </div>
                        <textarea class="form-control mb-2" placeholder="{{ 'note'|trans }}" name="note" rows="3"></textarea>
                        <button type="submit" class="btn btn-primary btn-block">{{ 'upload'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-12">
            {% if files|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'lock-file'|trans }} / {{ 'unlock-file'|trans }}</th>
                            <th scope="col">{{ 'show-file'|trans }}</th>
                            <th scope="col">{{ 'file-name'|trans }}</th>
                            <th scope="col">{{ 'file-size'|trans }}</th>
                            <th scope="col">{{ 'created-at'|trans }}</th>
                            <th scope="col">{{ 'remove'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                {# loop through database records #}
                    {% for file in files %}
                        <tr>
                            <td>
                                {% if file.public %}
                                    <a href="{{ path_for('file-public-' ~ lc, { 'uuid': file.id }) }}" class="btn btn-warning btn-sm" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'lock-file'|trans }}"><i class="fas fa-unlock fa-fw"></i></a>
                                {% else %}
                                    <a href="{{ path_for('file-public-' ~ lc, { 'uuid': file.id }) }}" class="btn btn-success btn-sm" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'unlock-file'|trans }}"><i class="fas fa-lock fa-fw"></i></a>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path_for('file-show-' ~ lc, { 'uuid': file.id }) }}" class="btn btn-info btn-sm mx-2" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'show-file'|trans }}"><i class="fas fa-eye fa-fw"></i></a>
                            </td>
                            <td>{{ file.name }}</td>
                            <td>{{ (file.size / 1000)|number_format(2, 'dp'|trans, 'ts'|trans) }} KB</td>
                            <td>{{ file.createdAt|date('datetime'|trans, 'timezone'|trans) }}</td>
                            <td><a href="{{ path_for('file-remove-' ~ lc, { 'uuid': file.id }) }}" class="btn btn-danger btn-sm ml-2" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'remove'|trans }}"><i class="fas fa-trash fa-fw"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <h4>{{ 'no-files'|trans }}</h4>
            {% endif %}
        </div>
        {% else %}
        {# if is external request #}
        <div class="col-12 mb-5">
            {# loop through database records #}
            {% if files|length > 0 %}
                {% for file in files %}
                    {% if file.public %}
                    <div class="mb-3">
                        <a href="{{ path_for('file-show-' ~ lc, { 'uuid': file.id }) }}" class="btn btn-info btn-sm mx-2" tabindex="-1" role="button" aria-disabled="true" data-toggle="tooltip" data-placement="top" title="{{ 'show-file'|trans }}"><i class="fas fa-eye fa-fw"></i></a>
                        {{ file.name }} <span class='ml-3'></span>
                        <span data-toggle="tooltip" data-placement="top" title="{{ 'file-size'|trans }}"><i class="fas fa-database"></i> {{ (file.size / 1000)|number_format(2, 'dp'|trans, 'ts'|trans) }} KB</span> &#124;
                        <span data-toggle="tooltip" data-placement="top" title="{{ 'created-at'|trans }}"><i class="fas fa-clock"></i> {{ file.createdAt|date('datetime'|trans) }}</span>
                    </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                {{ 'no-files'|trans }}
            {% endif %}
        </div>
        {% endif %}
    </div>
    {% endif %}
{% endblock %}