{% if flashMessages|length > 0 %}
    {% for message in flashMessages %}
    <div class="row">
        <div class="col-12">
            <div class="alert alert-{{ message.style }} alert-dismissible fade show text-center" role="alert">
                {{ message.text|raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {% endfor %}
{% endif %}
